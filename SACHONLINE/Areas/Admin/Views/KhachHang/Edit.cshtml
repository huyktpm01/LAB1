@model SACHONLINE.Models.KHACHHANG
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>
<h2>ĐIỀU CHỈNH THÔNG TIN KHÁCH HÀNG</h2>
@*Thêm thuộc tính cho form để upload ảnh*@
@using (Html.BeginForm("Edit", "KhachHang", FormMethod.Post, new
{
    @enctype =
"multipart/form-data"
}))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Mã Khách Hàng:</label>
        <div class="col-md-10">
            @*Chỉ hiển thị mã sách không cho sửa*@
            <input type="number" size="70" name="iMaKH" value="@Model.MaKH" readonly />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Họ Tên:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sHoTen" value="@Model.HoTen" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Địa Chỉ:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDiaChi" value="@Model.DiaChi" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Địa Chỉ:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sEmail" value="@Model.Email" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Số Điện Thoại:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sSoDienThoai" value="@Model.DienThoai" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ngày Sinh:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="dNgaySinh" value="@Model.NgaySinh" required />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ KHÁCH HÀNG", "Index")
</div>