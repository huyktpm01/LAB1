@model SACHONLINE.Models.KHACHHANG
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>THÊM KHÁCH HÀNG</h2>
@*Thêm thuộc tính cho form để upload ảnh*@
@using (Html.BeginForm("Create", "KhachHang", FormMethod.Post, new
{
    @enctype =
"multipart/form-data"
}))
{ 
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Họ Tên:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sHoTen" value="@ViewBag.HoTen"
                   required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tài Khoản:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTaiKhoan" value="@ViewBag.TaiKhoan"
                   required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Mật Khẩu:</label>
        <div class="col-md-10">
            <input type="password" size="70" name="sMatKhau" value="@ViewBag.MatKhau"
                   required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Email:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sEmail" value="@ViewBag.Email"
                   required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Địa chỉ:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDiaChi" value="@ViewBag.DiaChi"
                   required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Số Diện Thoại:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sDienThoai" value="@ViewBag.DienThoai"
                   required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ngày Sinh:</label>
        <div class="col-md-10">
            <input type="datetime" size="70" name="sNgaySinh" value="@ViewBag.NgaySinh"
                   required />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm mới" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ KHÁCH HÀNG", "Index")
</div>