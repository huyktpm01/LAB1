@model SACHONLINE.Models.DONDATHANG
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>
<h2>ĐIỀU CHỈNH THÔNG TIN NHÀ XUẤT BẢN</h2>
@*Thêm thuộc tính cho form để upload ảnh*@
@using (Html.BeginForm("Edit", "DonHang", FormMethod.Post, new
{
    @enctype =
"multipart/form-data"
}))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Mã Đơn Hàng:</label>
        <div class="col-md-10">
            @*Chỉ hiển thị mã sách không cho sửa*@
            <input type="number" size="70" name="iMaDonHang" value="@Model.MaDonHang" readonly />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tình Trạng Thanh Toán:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="bDaThanhToan" value="@Model.DaThanhToan" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tình Trạng Giao Hàng:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="iTinhTrangGiaoHang" value="@Model.TinhTrangGiaoHang" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ngày Đặt:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="dNgayDat" value="@Model.NgayDat" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ngày Giao:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="dNgayGiao" value="@Model.NgayGiao" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Mã Khách Hàng:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="iMaKH" value="@Model.MaKH" required />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ ĐƠN ĐẶT HÀNG", "Index")
</div>