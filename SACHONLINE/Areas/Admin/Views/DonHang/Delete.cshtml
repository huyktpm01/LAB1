@model SACHONLINE.Models.DONDATHANG
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }

    h3, h4 {
        color: red;
        font-weight: bold;
    }
</style>
<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3>Bạn quyết định ĐƠN ĐẶT HÀNG này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tình trạng thanh toán:</dt>
        <dd>@Html.DisplayFor(model => model.DaThanhToan) </dd>
        <dt>Tình trạng giao hàng:</dt>
        <dd>@Html.DisplayFor(model => model.TinhTrangGiaoHang) </dd>
        <dt>Ngày đặt:</dt>
        <dd>@Html.DisplayFor(model => model.NgayDat) </dd>
        <dt>Ngày giao:</dt>
        <dd>@Html.DisplayFor(model => model.NgayGiao) </dd>
        <dt>Mã khách hàng:</dt>
        <dd>@Html.DisplayFor(model => model.MaKH) </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ ĐƠN ĐẶT HÀNG", "Index")
        </div>
    }
</div>