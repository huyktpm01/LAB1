@model SACHONLINE.Models.CHUDE
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>THÊM SÁCH</h2>
@*Thêm thuộc tính cho form để upload ảnh*@
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Tên Chủ Đề:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTenChuDe" value="@ViewBag.TenChuDe"
                   required />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm mới" class="btn btn-default" />
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ CHỦ ĐỀ", "Index")
</div>