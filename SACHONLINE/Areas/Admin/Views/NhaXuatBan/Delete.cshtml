@model SACHONLINE.Models.NHAXUATBAN
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }

    h3, h4 {
        color: red;
        font-weight: bold;
    }
</style>
<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3>Bạn quyết định NHÀ XUẤT BẢN này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tên nhà xuất bản:</dt>
        <dd>@Html.DisplayFor(model => model.TenNXB) </dd>
        <dt>Địa chỉ:</dt>
        <dd>@Html.DisplayFor(model => model.DiaChi) </dd>
        <dt>Điện thoại:</dt>
        <dd>@Html.DisplayFor(model => model.DienThoai) </dd>
    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ NHÀ XUẤT BẢN", "Index")
        </div>
    }
</div>