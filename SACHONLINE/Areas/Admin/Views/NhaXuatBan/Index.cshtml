@*Khai báo để sử dụng chức năng phân trang*@
@using SACHONLINE.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SACHONLINE.Models.NHAXUATBAN>
@*Xây dựn một helper tùy chỉnh để cắt độ dài chuỗi*@

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ THÔNG TIN NHÀ XUẤT BẢN</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên Nhà Xuất Bản
        </th>
        <th>
            Địa Chỉ
        </th>
        <th>
            Số Điện Thoại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.TenNXB)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiaChi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DienThoai)
    </td>
    <td>
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaNXB }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNXB }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.MaNXB })
    </td>
</tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 :
Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>